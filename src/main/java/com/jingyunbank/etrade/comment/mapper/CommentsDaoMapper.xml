<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
	<mapper namespace="com.jingyunbank.etrade.comment.dao.CommentsDao">
		<resultMap type="com.jingyunbank.etrade.comment.entity.CommentsEntity" id="ResultMap">
			<id column="id" property="id" jdbcType="CHAR"/>
			<result column="uid" property="uid" jdbcType="CHAR"/>
			<result column="gid" property="gid" jdbcType="CHAR"/>
			<result column="imgid" property="imgid" jdbcType="CHAR"/>
			<result column="goods_comment" property="goodsComment" jdbcType="VARCHAR"/>
			<result column="comment_grade" property="commentGrade" jdbcType="INTEGER"/>
			<result column="goods_service" property="goodsService" jdbcType="VARCHAR"/>
			<result column="service_grade" property="serviceGrade" jdbcType="INTEGER"/>
			<result column="addtime" property="addtime" javaType="java.util.Date"/>
			<result column="comment_status" property="commentStatus" jdbcType="INTEGER"/>
		</resultMap>
		<sql id="comment_list">
			id,uid,gid,imgid,goods_comment,comment_grade,goods_service,service_grade,addtime,comment_status
		</sql>
		<!-- 添加评价的信息 -->
		<insert id="insert" parameterType="com.jingyunbank.etrade.comment.entity.CommentsEntity">
		insert into comment(
			id,uid,gid,imgid,goods_comment,comment_grade,goods_service,service_grade,addtime,comment_status
		)values(
			#{id},#{uid},#{gid},#{imgid},#{goodsComment},#{commentGrade},#{goodsService},#{serviceGrade},#{addtime},#{commentStatus}
		)
		</insert>
		<!-- 通过gid查询评论信息，多条 -->
		<select id="selectCommentByGid" parameterType="String" resultMap="ResultMap">
		   select 
		   <include refid="comment_list"></include>
		   from comment where gid=#{gid}
		</select>
		<!-- 通过id查询出评论信息 -->
		<select id="selectById" parameterType="String" resultType="com.jingyunbank.etrade.comment.entity.CommentsEntity">
			select <include refid="comment_list"></include>
			from comment where id=#{id}
		</select>
		<!-- 通过id删除评论信息 -->
		<delete id="delete" parameterType="String">
			delete from comment where id=#{id}
		</delete>
		
	</mapper>