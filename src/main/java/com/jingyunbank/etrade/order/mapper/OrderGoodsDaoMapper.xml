<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jingyunbank.etrade.order.dao.OrderGoodsDao">
	<resultMap type="com.jingyunbank.etrade.order.entity.OrderGoodsEntity" id="OrderGoodsEntityResultMap">
		<id column="id" property="ID" javaType="String"/>
		<result column="oid" property="OID" javaType="String"/>
		<result column="orderno" property="orderno" jdbcType="BIGINT"/>
		<result column="gid" property="GID" javaType="String"/>
		<result column="addtime" property="addtime" javaType="java.util.Date"/>
		<result column="gname" property="gname" javaType="String"/>
		<result column="status_code" property="statusCode" javaType="String"/>
		<result column="price" property="price" jdbcType="DECIMAL"/>
		<result column="count" property="count" jdbcType="INTEGER"/>
		<result column="uid" property="UID" javaType="String"/>
	</resultMap>
	<sql id="order_goods_column">
		id, oid,uid, orderno, gid, gname, addtime, status_code, price, count
	</sql>
	<insert id="insertMany">
		insert into order_goods
			(<include refid="order_goods_column"/>)
		values
			<foreach collection="goods" item="g" index="i" open="" separator="," close="">
				(#{g.ID}, #{g.OID}, #{g.UID},#{g.orderno}, #{g.GID}, #{g.gname}, #{g.addtime}, #{g.statusCode}, #{g.price}, #{g.count})
			</foreach>
	</insert>
	<select id="selectByUID" parameterType="String" resultMap="OrderGoodsEntityResultMap">
		select <include refid="order_goods_column"/> 
		from order_goods og
		<!--  left join goods_img img on og.gid = img.gid -->  <!--  and #{status}  -->
		where og.uid = #{UID} and og.status_code= #{status.code}  order by og.addtime desc
	</select>
	<select id="selectByGID" parameterType="String" resultMap="OrderGoodsEntityResultMap">
		select <include refid="order_goods_column"/> 
		from order_goods og
		<!--  left join goods_img img on og.gid = img.gid -->  
		where og.oid = #{OID}
	</select>
	<update id="updateStatus">
		update order_goods og
		set og.status_code = #{status.code}
		where og.oid in 
		<foreach collection="oids" item="oid" open="(" separator="," close=")">
			#{oid}
		</foreach>
	</update>
</mapper>
