<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace="com.jingyunbank.etrade.information.dao.InformationDetailsDao">
		<resultMap type="com.jingyunbank.etrade.information.entity.InformationDetailsEntity" id="InformationDetailsResultMap">
			<id column="id" property="ID"/>
			<result column="sid" property="SID"/>
			<result column="name" property="name"/>
			<result column="title" property="title"/>
			<result column="abstract" property="abstracts"/>
			<result column="content" property="content"/>
			<result column="picture" property="picture"/>
			<result column="addtime" property="addtime"/>
			<result column="recipe" property="recipe"/>
			<result column="function" property="function"/>
			<result column="status" property="status"/>
			<result column="orders" property="orders" />
			
		</resultMap>
	<sql id="details_list">
		id,sid,name,title,abstract,picture,addtime,status,recipe,function,orders
	</sql>
	<!-- 增加详情内容 -->
		<insert id="insert" parameterType="com.jingyunbank.etrade.information.entity.InformationDetailsEntity">
			insert into information_details(
				id,sid,name,title,abstract,content,picture,addtime,recipe,function,status,orders
			)values(
				#{ID},#{SID},#{name},#{title},#{abstracts},#{content},#{picture},#{addtime},#{recipe},#{function},#{status},#{orders}
			)
		</insert>
		<!-- 通过id删除对应的信息 -->
		<delete id="delete" parameterType="String">
			delete from information_details where id=#{ID}	
		</delete>
		<!-- 通过id修改对应属性的值 -->
		<update id="update" parameterType="com.jingyunbank.etrade.information.entity.InformationDetailsEntity">
			update information_details a 
			set 
			<if test="SID!=null and SID!=''">
			a.sid=#{SID},
			</if>
			<if test="name!=null and name!=''">
			a.name=#{name},
			</if>
			<if test="title!=null and title!=''">
			a.title=#{title},
			</if>
			<if test="abstracts!=null and abstracts!=''">
			a.abstract=#{abstracts},
			</if>
			<if test="content!=null and content!=''">
			a.content=#{content},
			</if>
			<if test="recipe!=null and recipe!=''">
			a.recipe=#{recipe},
			</if>
			<if test="function!=null and function!=''">
			a.function=#{function},
			</if>
			<if test="picture!=null and picture!=''">
			a.picture=#{picture},
			</if>
			<if test="status!=null and status!=''">
			a.status=#{status},
			</if>
			<if test="orders!=null and orders!=''">
			a.orders=#{orders},
			</if>
			a.id=#{ID}
			where a.id=#{ID}
		</update>
		<!-- 通过sid查出对应多个详情内容 -->
		<select id="selectDetailsBySid" resultMap="InformationDetailsResultMap">
			select <include refid="details_list"></include>
			from information_details where
			sid=#{SID}
			order by orders desc,addtime desc
			 LIMIT #{from} , #{size}
		</select>
		<select id="selectDetailBySid" resultMap="InformationDetailsResultMap">
			select <include refid="details_list"></include>
			from information_details where
			sid=#{SID}
			order by orders desc,addtime desc
		</select>
		<!-- 通过id查出每一条信息的详细内容啊 -->
		<select id="selectDetailByid" parameterType="String" resultMap="InformationDetailsResultMap">
			select 
			id,sid,name,title,abstract,content,picture,addtime,status,recipe,function,orders
			from information_details where
			id=#{ID}
		</select>
		<!-- 查出添加的所有的资讯详情 -->
		<select id="selectDetail" resultMap="InformationDetailsResultMap">
			select <include refid="details_list"></include>
			from information_details 
			order by orders desc,addtime desc
		</select>
		<!-- <select id="selectInfo" resultMap="">
			select <include refid="details_list"></include>
		</select> -->
	</mapper>
	
	
	